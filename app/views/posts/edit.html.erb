<section class="hero is-warning">
    <div class="hero-header">
      <div class="container">
        <h1 class="title is-4">
          投稿編集
        </h1>
      </div>
    </div>
  </section>
  
  <% if @post.errors.any? %>
    <div class="notification is-danger">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <section class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <%= form_for @post do |f| %>
            <div class="field">
              <%= f.label :title, "題名", class: "label" %>
              <%= f.text_field :title, class: "input" %>
            </div>
  
            <div class="field">
              <%= f.label :body, "内容", class: "label" %>
              <%= f.text_area :body, class: "textarea" %>
            </div>

            <div class="field">
                <%= f.label :adress, "住所", class: "label" %>
                <%= f.text_field :address, placeholder: "住所",class: "input"%>
                </div>            
  
            <div class="field">
              <%= f.label :image, "写真", class: "label" %>
              <%= f.attachment_field :image, class: "input" %>
            </div>

            <div class="field">
                <%= f.label :image, "ハッシュタグ", class: "label" %>
                <%= f.text_area :hashbody, class: "input" %>
              </div>
  
            <%= f.submit '更新', class: "button is-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </section>